generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Match {
  id               String         @id @default(uuid())
  uploadUrl        String
  status           MatchStatus    @default(UPLOADED)
  duration         Float?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  summary          String?
  trackingData     Json?
  teamColors       Json?
  progress         Int            @default(0)
  highlightReelUrl String?
  heatmapUrl       String?
  thumbnailUrl     String?
  topSpeedKmh      Float?
  userId           String?
  emotionScores    EmotionScore[]
  events           Event[]
  highlights       Highlight[]
  user             User?          @relation(fields: [userId], references: [id])
}

model Event {
  id         String    @id @default(uuid())
  matchId    String
  timestamp  Float
  type       EventType
  confidence Float
  createdAt  DateTime  @default(now())
  finalScore Float     @default(0)
  commentary String?
  match      Match     @relation(fields: [matchId], references: [id], onDelete: Cascade)

  @@index([matchId])
  @@index([timestamp])
}

model EmotionScore {
  id            String   @id @default(uuid())
  matchId       String
  timestamp     Float
  audioScore    Float
  motionScore   Float
  contextWeight Float
  finalScore    Float
  createdAt     DateTime @default(now())
  match         Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)

  @@index([matchId])
  @@index([timestamp])
}

model Highlight {
  id         String   @id @default(uuid())
  matchId    String
  startTime  Float
  endTime    Float
  score      Float
  eventType  String?
  commentary String?
  createdAt  DateTime @default(now())
  videoUrl   String?
  match      Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)

  @@index([matchId])
  @@index([startTime])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  firstName String?
  lastName  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  matches   Match[]
}

enum MatchStatus {
  UPLOADED
  PROCESSING
  COMPLETED
  FAILED
}

enum EventType {
  GOAL
  FOUL
  TACKLE
  SAVE
  CELEBRATION
  HIGHLIGHT
  PENALTY
  RED_CARD
  YELLOW_CARD
  CORNER
  OFFSIDE
}
